---
interface Props {
  config: { prop: string; type: string; default?: string; desc?: string }[];
}

const { config } = Astro.props;
---

<div class="border border-gray-300 rounded-md">
  <table class="w-full table!">
    <thead>
      <tr>
        <th class="px-3! bg-gray-50"> Property </th>
        <th class="px-3! bg-gray-50"> Type </th>
        <th class="px-3! bg-gray-50"> Default </th>
        <th class="px-3! bg-gray-50"> Description </th>
      </tr>
    </thead>
    <tbody>
      {
        config.map((i) => (
          <tr>
            <td class="px-3!">
              <mark class="bg-blue-50 p-1 rounded text-sm! text-blue-700!">
                {i.prop}
              </mark>
            </td>
            <td class="px-3! max-w-32">
              <code class="bg-gray-100 p-1! rounded text-xs! text-gray-700!">
                {i.type}
              </code>
            </td>
            <td class="px-3!">
              {i.default ? (
                <code class="bg-gray-100 p-1! rounded text-xs! text-gray-700!">
                  {i.default}
                </code>
              ) : (
                "-"
              )}
            </td>
            <td class="px-3!">{i.desc ?? "-"}</td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
